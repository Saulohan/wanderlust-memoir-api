      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.8.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WanderlustMemoir.Application\WanderlustMemoir.Application.csproj" />
    <ProjectReference Include="..\WanderlustMemoir.Infrastructure\WanderlustMemoir.Infrastructure.csproj" />
    <ProjectReference Include="..\WanderlustMemoir.Domain\WanderlustMemoir.Domain.csproj" />
  </ItemGroup>

</Project>
